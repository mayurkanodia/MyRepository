<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Relative_layout_classmate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/RR_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/my_order_row"
        android:layout_margin="10dp"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/profile_pic_Img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:src="@drawable/last_button" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/arrow_btn"
            android:layout_toRightOf="@+id/profile_pic_Img">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="7"
                android:singleLine="true"
                android:text="Mango"
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:singleLine="true"
                android:text="Mango"
                android:gravity="center"
                android:textColor="@color/textColor"
                android:background="@drawable/last_button"
                android:textSize="14sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/arrow_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="$ 20,00" />


        <ImageButton android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/arw"/>
    </RelativeLayout>

</RelativeLayout>